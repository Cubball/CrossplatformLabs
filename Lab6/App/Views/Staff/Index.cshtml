@model IEnumerable<Staff>

@{
    ViewData["Title"] = "Staff List";
}

<div class="container mt-4">
    <h2>Staff List</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in Model)
            {
                <tr>
                    <td>@staff.FirstName @staff.LastName</td>
                    <td>@staff.Role.Description</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@staff.Id" class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
